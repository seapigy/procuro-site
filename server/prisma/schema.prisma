// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// For PostgreSQL (production):
// datasource db {
//   provider = "postgresql"
//   url      = env("DATABASE_URL")
// }

model Company {
  id        Int      @id @default(autoincrement())
  name      String?
  realmId   String   @unique
  createdAt DateTime @default(now())

  users   User[]
  invites Invite[]

  @@index([realmId])
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Company relationship
  companyId Int?
  company   Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)

  // QuickBooks integration
  quickbooksId           String?
  quickbooksAccessToken  String?
  quickbooksRefreshToken String?
  quickbooksRealmId      String?
  quickbooksConnectedAt  DateTime?
  onboardingCompleted    Boolean  @default(false)

  items          Item[]
  alerts         Alert[]
  savingsSummary SavingsSummary[]

  @@index([companyId])
}

model Item {
  id                  Int      @id @default(autoincrement())
  userId              Int
  name                String
  sku                 String?
  category            String?
  lastPaidPrice       Float
  lastCheckedPrice    Float?
  quantityPerOrder    Int      @default(1)
  reorderIntervalDays Int      @default(30)
  vendorName          String?
  upc                 String?
  matchedRetailer     String?
  matchedUrl          String?
  matchedPrice        Float?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  prices Price[]
  alerts Alert[]

  @@index([userId])
}

model Price {
  id       Int      @id @default(autoincrement())
  itemId   Int
  retailer String
  price    Float
  url      String?
  date     DateTime @default(now())

  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([itemId])
  @@index([retailer])
  @@index([date])
}

model Alert {
  id                      Int      @id @default(autoincrement())
  itemId                  Int
  userId                  Int
  retailer                String
  newPrice                Float
  oldPrice                Float
  priceDropAmount         Float
  url                     String?
  savingsPerOrder         Float
  estimatedMonthlySavings Float
  seen                    Boolean  @default(false)
  viewed                  Boolean  @default(false)
  alertDate               DateTime @default(now())
  dateTriggered           DateTime @default(now())

  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([itemId])
  @@index([userId])
  @@index([alertDate])
  @@index([seen])
}

model SavingsSummary {
  id             Int      @id @default(autoincrement())
  userId         Int
  monthlyTotal   Float    @default(0)
  yearToDate     Float    @default(0)
  lastCalculated DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Invite {
  id        Int      @id @default(autoincrement())
  companyId Int
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  used      Boolean  @default(false)

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([expiresAt])
  @@index([companyId])
}
